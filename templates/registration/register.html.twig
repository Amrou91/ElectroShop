{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

<div class="contact">

    <div class="container">
        <div class="row">
            <div class="contact_form_container">
                <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 contact_col">
                    <h4 class="section_title">S'inscrire</h4>
                    <div class="contact_form_container">
                        {{ form_start(registrationForm) }}

                            <div class="form-group"> {{ form_row(registrationForm.prenom, {'attr': {'class': 'contact_input'}}) }} </div>
                            <div class="form-group"> {{ form_row(registrationForm.nom, {'attr': {'class': 'contact_input'}}) }} </div>
                            <div class="form-group"> {{ form_row(registrationForm.telephone, {'attr': {'class': 'contact_input'}}) }} </div>
                            <div class="form-group"> {{ form_row(registrationForm.email, {'attr': {'class': 'contact_input'}}) }} </div>
                            <div class="form-group"> {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'contact_input'}}) }} </div>
                            <div class="form-group"> {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'contact_input'}}) }} </div>
                            {# <div class="form-group"> {{ form_row(registrationForm.adresse, {'attr': {'class': 'contact_input'}}) }} </div> #}
                            {# <div class="form-group"> {{ form_row(registrationForm.CodePostal, {'attr': {'class': 'contact_input'}}) }} </div> #}
                            <div class="form-group"> {{ form_row(registrationForm.agreeTerms) }} </div>
                            <button class="btn btn-lg btn-primary" type="submit">
                                    Register
                            </button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <div class="contact_info">
                            <div class="contact_info_section">
                                <div class="contact_info_title">Marketing</div>
                                <ul>
                                    <li>Phone: <span>+53 345 7953 3245</span></li>
                                    <li>Email: <span>yourmail@gmail.com</span></li>
                                </ul>
                            </div>
                            <div class="contact_info_section">
                                <div class="contact_info_title">Shippiing & Returns</div>
                                <ul>
                                    <li>Phone: <span>+53 345 7953 3245</span></li>
                                    <li>Email: <span>yourmail@gmail.com</span></li>
                                </ul>
                            </div>
                            <div class="contact_info_section">
                                <div class="contact_info_title">Information</div>
                                <ul>
                                    <li>Phone: <span>+53 345 7953 3245</span></li>
                                    <li>Email: <span>yourmail@gmail.com</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
